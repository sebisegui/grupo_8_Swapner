<!DOCTYPE html>
<html lang="en">

  <%- include('./partials/head')  %>

<body class="fondo">

<!-- ------------HEADER------------- -->
<%- include('./partials/header')  %> 
<!-- ------------HEADER------------- -->
    
<!-- -----------------FORMULARIO CARGA PRODUCTO----------------- -->
<div class="container">
  <div class="row">
<div class="col-lg-4 col-md-4 .hidden-sm d-none d-mg-block d-lg-block">
  <%imagen.forEach(images =>{%>
  <img src="/images/products/<%=images.imagenes%>" id="imgslider">
  
  <% })%>
</div>
<div class="col-lg-8 col-md-12 col-12">
<div class="wrapper fadeInDown">
	
	<div id="formContent">
	  <!-- Tabs Titles -->
  
	  <!-- Icon -->
	  <div class="fadeIn first">
		<img src="/images/logo-nar.png" id="icon" alt="User Icon" >
	  </div>
  
    <!-- Login Form -->
    
	  <form action="/products/edit/<%=producto.id%>?_method=PUT" method="post" enctype="multipart/form-data">
      <label for="nombre">Nombre del producto</label><br>
      <input type="text" class="form-control" id="nombre" name="nombre" value="<%=producto.nombre%>">

            
      <label for="categoria">Categoria</label><br>
      <select type="text" class="form-control" id="categoria" name="categoria" value="categoria">
        <% categorias.forEach(categoria => {%> 
        <option value="<%=categoria.id%>" placeholder="cat"><%=categoria.nombre%></option>
        <%})%>
      </select>
      <br>

              <label for="precio">Precio del producto</label><br>
                <input id="precio" name="precio" type="text" value="<%=producto.precio%>">

            <label for="descripcion">Descripcion del producto</label><br>
            <textarea type="text" class="form-control" id="descripcion" name="descripcion" rows="8" value="<%=producto.descripcion%>"><%=producto.descripcion%></textarea><br>

                <label for="fotos">Cargar Fotos</label>
                <div class="custom-file" style="width: 90%;">
                  <input type="file" class="custom-file-input" id="customFile" name="foto_portada">
                  <label class="custom-file-label" for="customFile">Fotos</label>
                </div>
                  
                
		<br>
		<br>

    
		<input type="submit" class="fadeIn second" value="Editar">
	  </form>
  
	  
	</div>

  </div></div>
</div></div>
    

<!-- -----------------FORMULARIO CARGA PRODUCTO----------------- -->

<!-- ------------FOOTER------------ -->
<%- include('./partials/footer')  %> 
<!-- ------------FOOTER------------- -->

</body>

