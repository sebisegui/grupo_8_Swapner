<body class="fondo">

<!-- ------------HEADER------------- -->
<%- include('./partials/header')  %> 
<!-- ------------HEADER------------- -->
    
<!-- -----------------FORMULARIO CARGA PRODUCTO----------------- -->

    <div class="container-fluid products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editando Producto</h2>
			</div>
        </div>
        <div class="col-12 formulario">
			<form action="/product/create" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6 ">
						<label for="exampleFormControlInput1">Nombre del producto</label>
              <input type="tex" class="form-control" id="exampleFormControlInput1" placeholder="Nombre del producto">
                    </div>
                    <div class="col-12 col-md-6 ">
						<label for="exampleFormControlSelect1">Categoria</label>
              <select class="form-control" id="exampleFormControlSelect1">
                <option>Electronica</option>
                <option>Moda</option>
                <option>Hogar</option>
                <option>Inmuebles</option>
                <option>Bazar</option>
              </select>
					</div>
					<div class="col-12 col-md-6 ">
						<label for="exampleFormControlSelect2">SubCategoria</label>
              <select multiple class="form-control" id="exampleFormControlSelect2">
                <option>Dependiendo la cat</option>
                <option>Dependiendo la cat</option>
                <option>Dependiendo la cat</option>
                <option>Dependiendo la cat</option>
                <option>Dependiendo la cat</option>
              </select>
					</div>
					<div class="col-12 col-md-6 ">
						<label for="exampleFormControlTextarea1">Descripcion del producto</label>
              <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
					</div>
					<div class="col-12 col-md-6 ">
            <label for="exampleFormControlFile1">Foto del producto</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
          </div>
          <div class="status">
          <label for="exampleFormControlSelect1">Estado</label>
              <select class="form-control" id="exampleFormControlSelect1">
                <option>Nuevo</option>
                <option>Usado</option>
              </select>
            </div>
          <div class="precioProduct">
            <label>Precio del producto</label>
                <input type="number" class="form-control" aria-label="Text input with dropdown button">
          </div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Cargar producto</button>
					</div>
				</div>
			</form>
		</div>
  </div>

<!-- -----------------FORMULARIO CARGA PRODUCTO----------------- -->

<!-- ------------FOOTER------------ -->
<%- include('./partials/footer')  %> 
<!-- ------------FOOTER------------- -->

</body>

