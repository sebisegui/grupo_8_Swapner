<!DOCTYPE html>
<html lang="en">
 <%- include('./partials/head')  %> 
<body>

<!-- ------------HEADER------------- -->
<%- include('./partials/header')  %> 
<!-- ------------HEADER------------- -->
    
<!-- ---------------CONTENEDOR PRODUCTOS------------------- -->
<div class="container2" style="margin-bottom: 5%;" >
            <div class="row">

              <!-- --------------------COLUMNA MATCHES--------------------- -->
              <div class=".hidden-sm col-lg-3 col-md-3 d-none d-mg-block d-lg-block" id="colswap">

                <div class="slider overflow-auto custom-scrollbar-css p-2 " style="height: 800px;margin: 10px;margin-top: 20px;">
        
                
                
                  <ul class="slides" >
        
                  
                      
                      <div>
                        <div class="col-12 col-md-12 col-lg-12" style="text-align: center;margin-top: 15px;;">
                        <h2>Swapp</h2>
                      </div>
        
                      <div class="col-12 col-md-12 col-lg-12" id="Columna-matches">

                        <% productos.forEach(producto =>{%> 

                        <div class="col-12 col-md-12 col-lg-12" id="matches" style="margin-bottom: 10px;">
                          <div class="hovereffect">
                            <img src="/images/products/<%=producto.foto_portada%>" style="width: 100%;margin-right: auto;">
                                <div class="overlay">
                                    <h2><%= producto.nombre %></h2>
                            <p>
                              <a href="/products/<%=producto.id%>">More info</a>
                            </p>
                                </div>
                        </div>
      
                        </div>
                        <% })%> 
                      </div>
        
                        
        
                    </div>
                  
                  </ul>
                </div>
                
                </div>
            
      
           <!-- --------------------COLUMNA MATCHES--------------------- -->
              
            <!-- --------------------DETALLE PRODUCTOS--------------------- -->

              <div class="col-lg-9 col-12 col-md-12">
                <h1 class="detallesProducto" style="text-align: center;"><%= productoDetalle.nombre %></h1>
                <div class="row">
                  <div class="col-lg-4 col-md-5 col-12 mb-4" style="align-content: center;">
                  <div class="slider" >
                    <input type="radio" name="toggle" id="btn-1" checked>
                    <input type="radio" name="toggle" id="btn-2">
                    <input type="radio" name="toggle" id="btn-3">
                  
                    <div class="slider-controls">
                      <label for="btn-1"></label>
                      <label for="btn-2"></label>
                      <label for="btn-3"></label>
                    </div>
                  
                    <ul class="slides">
                      <%imagen.forEach(images =>{%>
                      <li class="slide">
                        <div>
                        <img src="/images/products/<%=images.imagenes %>" id="imgslider">
                      </div>
                    
                     </li><% })%>
               
                      </li>
                    </ul>
                  </div>
                </div>
                <div class="col-lg-7 col-md-7 col-12" id="description-card" >
                  <div class="card-deck" >
                    <div class="card border-light mb-3" id="carddesc" style="max-width: 10rem;max-height: 120px;margin: auto; border-top-left-radius: 20px;border-bottom-right-radius: 40px;margin-top: 15px;background-color: #f6f6f6;">
                      <div class="card-header" style="background-color: white;border-top-left-radius: 20px;border-color:#ef4a22;text-align: center;">Categoria</div>
                      <div class="card-body text-dark" style="background-color:  rgba(117, 117, 117, 0);border-bottom-right-radius: 40px;">
                        <h5 class="card-title" style="text-align: center;"><%= productoDetalle.categorias.nombre %></h5>
                      </div>
                    </div>
                    <div class="card border-light mb-3 " id="carddesc" style="max-width: 10rem;max-height: 120px;margin: auto; border-top-left-radius: 20px;border-bottom-right-radius: 40px;margin-top: 15px;background-color: #f6f6f6;">
                      <div class="card-header" style="background-color:white;border-top-left-radius: 20px;border-color:#ef4a22;text-align: center;">Zona</div>
                      <div class="card-body text-dark" style="background-color: rgba(117, 117, 117, 0);border-bottom-right-radius: 40px;">
                        <h5 class="card-title" style="text-align: center;"><%= productoDetalle.zona %></h5>
                      </div>
                    </div>
                    <div class="card border-light mb-3" id="carddesc" style="max-width: 10rem;max-height: 120px;margin: auto; border-top-left-radius: 20px;border-bottom-right-radius: 40px;margin-top: 15px;background-color: #f6f6f6;">
                      <div class="card-header" style="background-color: white;border-top-left-radius: 20px;border-color:#ef4a22;text-align: center;">Precio</div>
                      <div class="card-body text-dark" style="background-color:  rgba(117, 117, 117, 0);border-bottom-right-radius: 40px;">
                        <h5 class="card-title" style="text-align: center;"><%= productoDetalle.precio %></h5>
                      </div>
                    </div>
                  </div>
                  <div class="card-deck" style="padding: 15px;">
                    <div class="card border-light mb-3" id="carddesc2" style="height:fit-content; border-top-left-radius: 20px;border-bottom-right-radius: 40px;margin-top: 15px;background-color: #f6f6f6;">
                      <div class="card-header" style="background-color: white;border-top-left-radius: 20px;border-color:#ef4a22;text-align: center;">Descripcion</div>
                      <div class="card-body text-dark" style="background-color:  rgba(117, 117, 117, 0);border-bottom-right-radius: 40px;height: 300px;padding-top: 10px;;">
                        <h5 class="card-title" style="text-align: center;margin-top: 0px;padding: 20px;"><%= productoDetalle.descripcion %></h5>
                      </div>
                    </div>
                    
                  </div>
                     
              </div>      
              <div class="col-lg-4" style="margin-left: 0px;">
                <div class="botones">
                  <a class="btn btn-outline-danger" href="#" id="butnok" >
                    <i class="fa fa-times fa-3x" aria-hidden="true"></i> <br></a>
                  <a class="btn btn-outline-success" id="butok" href="#" >
                    <i class="fa fa-check fa-3x" aria-hidden="true"></i> <br></a>
                  </div>
              </div>   
            </div>
            <!-- --------------------DETALLE PRODUCTOS--------------------- -->
          </div>
        </div>
</div>
<!-- ---------------CONTENEDOR PRODUCTOS------------------- -->

<!-- ------------FOOTER------------ -->
<%- include('./partials/footer')  %> 
<!-- ------------FOOTER------------- -->

</body>
</html>
