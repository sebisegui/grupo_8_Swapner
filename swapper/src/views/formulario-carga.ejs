<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head')  %>
<body class="fondo">

<!-- ------------HEADER------------- -->
<%- include('./partials/header')  %> 
<!-- ------------HEADER------------- -->
    
<!-- -----------------FORMULARIO CARGA PRODUCTO----------------- -->

    <div class="container-fluid products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Publica tu producto</h2>
			</div>
        </div>

        <!--formulario-->
        <div class="col-12 formulario">
			<form action="/products/create" method="POST">
				<div class="row product-detail">

					<div class="col-12 col-md-6 ">
						<label for="nombre">Nombre del producto</label>
              <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre del producto">
                    </div>

          <div class="col-12 col-md-6 ">
						<label for="categoria">Categoria</label>
              <select  class="form-control" id="categoria" name="categoria">
                <option >Electronica</option>
                <option >Moda</option>
                <option >Hogar</option>
                <option >Inmuebles</option>
                <option >Bazar</option>
              </select>
					</div>
				
					<div class="col-12 col-md-6 ">
						<label for="descripcion">Descripcion del producto</label>
              <textarea class="form-control" id="descripcion" name="descripcion" rows="3"></textarea>
          </div>
          
					<div class="col-12 col-md-6 ">
            <label for="imagen">Foto del producto</label>
            <input type="file" class="form-control-file" id="imagen" name="imagen">
          </div>

          <div class="status">
          <label for="estado">Estado</label>
              <select class="form-control" id="estado" name="imagen">
                <option value="nuevo">Nuevo</option>
                <option value="usado">Usado</option>
              </select>
            </div>
            
          <div class="precioProduct">
            <label for="precio">Precio del producto</label>
                <input id="precio" name="precio" type="number" class="form-control" aria-label="Text input with dropdown button">
          </div>

          <div class="col-12 col-md-2 ">
            <label for="zona">Zona</label>
                <input id="zona" name="zona" type="text" class="form-control" >
          </div>
          
					<div class="col-12">
						<button type="submit" class="buy-now-button">Cargar producto</button>
					</div>
				</div>
			</form>
		</div>

  </div>



<!-- ------------FOOTER------------ -->
<%- include('./partials/footer')  %> 
<!-- ------------FOOTER------------- -->

</body>

