<!-- -----------------FORMULARIO CARGA PRODUCTO----------------- -->
<div class="wrapper fadeInDown">
	
	<div id="formContent">
	  <!-- Tabs Titles -->
  
	  <!-- Icon -->
	  <div class="fadeIn first">
		<img src="/images/logo-nar.png" id="icon" alt="User Icon" >
	  </div>
  
    <!-- Login Form -->
    
	  <form action="/products/create" method="POST" class="fadeIn second" >
      
      <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre del producto">
            
            <label for="categoria">Categoria</label><br>
            <select type="categoria" class="form-control" id="categoria" name="categoria" placeholder="Categoria">
              <option >Electronica</option>
              <option >Moda</option>
              <option >Hogar</option>
              <option >Inmuebles</option>
              <option >Bazar</option>
            </select><br>

            

            <label for="estado">Estado</label><br>
              <select type="categoria" class="form-control" id="estado" name="estado" placeholder="Estado">
                <option value="nuevo">&#9733; &#9734; &#9734; &#9734; &#9734</option>
                <option value="usado">&#9733; &#9733; &#9734; &#9734; &#9734</option>
                <option value="nuevo">&#9733; &#9733; &#9733; &#9734; &#9734</option>
                <option value="usado">&#9733; &#9733; &#9733; &#9733; &#9734</option>
                <option value="nuevo">&#9733; &#9733; &#9733; &#9733; &#9733</option>
                
              </select>

              
                <input id="precio" name="precio" type="number" class="form-control" aria-label="Text input with dropdown button" placeholder="Precio del producto">

            
            <textarea type="text" class="form-control" id="descripcion" name="descripcion" rows="8" placeholder="Descripcion del producto"></textarea><br>

            
                <input id="zona" name="zona" type="text" class="form-control" placeholder="Zona">

                <label for="fotos">Cargar Fotos</label>
                
                  <div class="custom-file" style="width: 90%;">
                    <input type="text" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Fotos</label>
                  </div>
                
		<br>
		<br>


		<input type="submit" class="fadeIn second" value="Cargar">
	  </form>
  
	  
	</div>

  </div>

    

<!-- -----------------FORMULARIO CARGA PRODUCTO----------------- -->

